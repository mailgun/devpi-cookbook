#!/bin/sh
#
# RUnit service script installed by last Chef run.
#

exec 2>&1
exec chpst -0 -u <%= node[:devpiserver][:daemon_user] %> \
  "<%= node[:devpiserver][:virtualenv] %>/bin/devpi-server" \
  --port <%= node[:devpiserver][:server_port] %> \
  --host <%= node[:devpiserver][:server_host] %> \
  --serverdir "<%= node[:devpiserver][:server_root] %>"
